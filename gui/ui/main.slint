import { Tabs } from "main/tabs.slint";
import { Actions } from "main/actions.slint";
import { Wizard, FileValidationResult } from "wizard.slint";
import { Globals, GlobalModels } from "globals.slint";
import { VerticalBox } from "std-widgets.slint";

export { Wizard, FileValidationResult, Globals, GlobalModels }

export component MainWindow inherits Window {
    icon: Globals.icon;
    title: "Obliteration";
    min-width: 1000px;
    min-height: 500px;

    pure callback start_game(int);

    pure callback clear_log();
    pure callback get_log_text() -> string;

    pure callback open_new_issue_link();

    pure callback open_system_folder();
    pure callback quit();

    VerticalBox {
        Tabs {}

        Actions {
            start_game => {
                start_game(0)
            }
        }
    }
}

export component Screen inherits Window { }

export component ErrorDialog inherits Window {
    in property <string> message;

    Text {
        padding: 10px;
        text: message;
    }
}
