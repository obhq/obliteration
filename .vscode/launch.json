{
  "configurations": [
    {
      "name": "Main",
      "type": "lldb",
      "request": "launch",
      "args": [],
      "cwd": "${workspaceFolder}",
      "windows": {
        "program": "${workspaceFolder}/build/src/Obliteration.exe",
        "env": {
          "Path": "${env:Path};${env:CMAKE_PREFIX_PATH}\\bin"
        }
      },
      "linux": {
        "program": "${workspaceFolder}/build/src/obliteration"
      },
      "osx": {
        "program": "${workspaceFolder}/build/src/obliteration.app/Contents/MacOS/obliteration"
      }
    },
    {
      "name": "Legacy Kernel",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/src/target/debug/kernel",
      "args": ["--debug"],
      "cwd": "${workspaceFolder}"
    }
  ],
  "version": "2.0.0"
}
