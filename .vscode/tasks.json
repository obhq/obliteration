{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "detail": "Build Obliteration and create distribution files",
      "type": "process",
      "command": "python3",
      "args": [
        "build.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBuildCommand": true
    },
    {
      "label": "Launch VMM",
      "detail": "Launch the GUI then start the VMM in debug mode",
      "type": "process",
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "linux": {
        "command": "${workspaceFolder}/dist/bin/obliteration"
      },
      "osx": {
        "command": "${workspaceFolder}/dist/Obliteration.app/Contents/MacOS/Obliteration"
      },
      "windows": {
        "command": "${workspaceFolder}/dist/obliteration.exe"
      },
      "args": [
        "--debug",
        "127.0.0.1:1234"
      ]
    }
  ]
}
